{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "LF",
        "outDir": "./lib/",
        "target": "es5",
        "sourceMap": false,
	"strict": false,
	"strictNullChecks": false,
        "declaration": true,
        "jsx": "preserve",
        "lib": [
            "es2017",
            "dom",
            "esnext"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        ".git",
        "node_modules"
    ]
}
